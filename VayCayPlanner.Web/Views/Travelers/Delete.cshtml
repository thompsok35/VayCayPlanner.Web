@model VayCayPlanner.Common.Traveler.ViewModels.TravelerDeleteVM

@{
    ViewData["Title"] = "Delete";
}

@*<h1>Delete from: @Model.GroupName</h1>*@

<h3>Are you sure you want to delete this traveler?</h3>
<div>
    <h4>@Model.FullName from @Model.GroupName</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>
    </dl>
    <br/>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="TravelGroups" asp-action="Details" asp-route-id="@Model?.TravelGroupId">Back to List</a>
        @*<a asp-action="Index">Back to List</a>*@
    </form>
</div>
