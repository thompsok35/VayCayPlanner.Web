@model VayCayPlanner.Common.ViewModels.Transports.AddTransportVM

@{
    ViewData["Title"] = "Create";
}

<div class="banner">
    <div class="row">
        <div class="col" style="text-align: left">
            <a asp-action="Index" asp-controller="Home">Back</a>
        </div>
        <div class="col" style="text-align: right">
            <a asp-action="Index" asp-route-id="@Model?.TripId">Next</a>
        </div>
    </div>
    <div class="row" style="text-align: center">
        <span>1 - Name Trip >  2 - Add a Destination >  3 - Add Travelers  > <strong> 4 - Transportation </strong></span><a></a>
    </div>
</div>
<hr />

<div class="row align-items-center">
    <div class="col" style="text-align: center">
        <br />
        <h4>@Model.TripName</h4>
        <br />
    </div>
</div>
<br />
<h4>Select the type of transport and the destination.</h4>
    @*travelers that will be on this @Model.TransportType transport with you to @Model.City, @Model.Country*@
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTransportDates">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TripId" />
            <input type="hidden" asp-for="DestinationId" />
            <select asp-for="Id" asp-items="Model?.TransportType" class="form-select">                
                <option>Select Transport Type</option>
            </select>
            <span asp-validation-for="TransportType" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="DepartFrom" class="control-label"></label>
                <input asp-for="DepartFrom" class="form-control" />
                <select asp-for="Id" asp-items="Model?.FromDestinations" class="form-select">
                    <option>Select from location</option>
                </select>
                <span asp-validation-for="DepartFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArriveIn" class="control-label"></label>
                <input asp-for="ArriveIn" class="form-control" />
                <span asp-validation-for="ArriveIn" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Transports" asp-route-id="@Model?.TripId">Trip Transports</a>
</div>


